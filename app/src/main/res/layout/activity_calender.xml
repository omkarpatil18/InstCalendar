<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calenders"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/calendar_heading"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_heading"
        android:layout_centerInParent="true">
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="212dp"
            android:id="@+id/odd_year1_frame"
            android:layout_marginLeft="@dimen/calendars_margin"
            android:layout_marginStart="@dimen/calendars_margin"
            android:layout_marginTop="@dimen/calendars_margin">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/odd_year1"
                android:alpha="0.5"
                android:layout_margin="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/odd_year1_textView"
                android:text="@string/odd_year1"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="212dp"
            android:id="@+id/even_year1_frame"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/odd_year1_frame"
            android:layout_toEndOf="@id/odd_year1_frame"
            android:layout_marginRight="@dimen/calendars_margin"
            android:layout_marginEnd="@dimen/calendars_margin"
            android:layout_marginTop="@dimen/calendars_margin">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/even_year1"
                android:alpha="0.5"
                android:layout_margin="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/even_year1_textView"
                android:text="@string/even_year1"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="212dp"
            android:id="@+id/odd_year2_frame"
            android:layout_below="@id/odd_year1_frame"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/calendars_margin"
            android:layout_marginLeft="@dimen/calendars_margin"
            android:layout_marginStart="@dimen/calendars_margin">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/odd_year2"
                android:alpha="0.5"
                android:layout_margin="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/odd_year2_textView"
                android:text="@string/odd_year2"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="212dp"
            android:id="@+id/even_year2_frame"
            android:layout_below="@id/even_year1_frame"
            android:layout_toRightOf="@id/odd_year2_frame"
            android:layout_toEndOf="@id/odd_year2_frame"
            android:layout_marginRight="@dimen/calendars_margin"
            android:layout_marginEnd="@dimen/calendars_margin"
            android:layout_marginBottom="@dimen/calendars_margin">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/even_year2"
                android:alpha="0.5"
                android:layout_margin="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/even_year2"
                android:id="@+id/even_year2_textView"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>